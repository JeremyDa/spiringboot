<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="1 seconds" debug="false">
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <property name="LOG_FILE" value="logs/log"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <appender name="TIME_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<file>logs/log.log</file>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 50MB -->
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- keep 30 days' worth of history -->
            <maxHistory>365</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="TIME_FILE"/>
    </root>

    <logger name="org.springframework.web" level="ERROR">
        <appender-ref ref="TIME_FILE"/>
    </logger>
    <logger name="org.mybatis" level="all">
        <appender-ref ref="TIME_FILE"/>
    </logger>
    <logger name="user" level="all">
        <appender-ref ref="TIME_FILE"/>
    </logger>
    <logger name="branch" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>
    <logger name="userrole" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>
    <logger name="menu" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>
    <logger name="appDeptIntroduce" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>
    <logger name="appDoctorIntroduce" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>
    <logger name="appMsgTeletext" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>
    <logger name="appSurveyMain" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>
    <logger name="appSurveyItems" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>
    <logger name="appAskBoardItems" level="all">         <appender-ref ref="TIME_FILE"/>     </logger>

</configuration>
